"" ==================================================
"" 各种设置
"" ==================================================
""
colorscheme abyss
set titlestring="Vimperator by Firefox"
set verbose=9
set wildmode=list:full
set maxitems=10
set visualbell
set focuscontent
set editor="gvim -f"
set go=
set nextpattern=\s*下一页|下一张|下一篇|下页|后页\s*,^\bnext\b,\\bnext\\b,^>$,^(>>|03)$,^(>|03),(>|03)$,\\bmore\\b
set previouspattern=\s*上一页|上一张|上一篇|上页|前页\s*,^\bprev|previous\b,\\bprev|previous\\b,^<$,^(<<|00)$,^(<|00),(<|00)$
set! ui.key.generalAccessKey=0
""
